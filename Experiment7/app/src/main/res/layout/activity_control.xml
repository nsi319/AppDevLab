<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ControlActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Screen Brightness % :"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/bright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:ems="10"
            android:textColor="@color/textColor"
            android:inputType="numberSigned"
            android:textColorHint="@color/textColor"
            android:autofillHints="" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        app:cardCornerRadius="10dp">
        <Button
            android:id="@+id/save_bright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            android:paddingRight="10dp"
            android:paddingVertical="5dp"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_brightness_high_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/textColor"
            android:textColor="@color/textColor"
            android:background="@color/buttonColor"
            android:text="SET BRIGHTNESS" />
    </androidx.cardview.widget.CardView>

    <Switch
        android:id="@+id/dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:text="Dark Mode" />


    <Switch
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:text="Status Bar" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="10dp">
        <Button
            android:id="@+id/set_ringtone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textStyle="italic"
            android:paddingRight="10dp"
            android:textSize="12sp"
            android:paddingVertical="5dp"
            android:drawableLeft="@drawable/ic_ring_volume_black_24dp"
            android:drawablePadding="5dp"
            android:drawableTint="@color/textColor"
            android:textColor="@color/textColor"
            android:background="@color/buttonColor"
            android:text="SET RINGTONE" />
    </androidx.cardview.widget.CardView>

</LinearLayout>