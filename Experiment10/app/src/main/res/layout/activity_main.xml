<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="3dp"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Mobile Application Development"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Experiment 10"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:ems="10"
        android:textSize="15sp"
        android:background="#FFFFFF"
        android:hint="Player Name"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        >
        <ImageView
            android:id="@+id/iv_android"
            android:tag="Android"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/ic_android_black_24dp"
            android:tint="@android:color/holo_blue_light"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_battery"
            android:tag="Battery"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/ic_battery_full_black_24dp"
            android:tint="@android:color/holo_green_light"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_camera"
            android:tag="Camera"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:tint="@android:color/holo_red_dark"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        >
        <ImageView
            android:id="@+id/iv_flight"
            android:tag="Flight"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/ic_flight_black_24dp"
            android:tint="@android:color/black"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_phone"
            android:tag="Phone"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/ic_phone_black_24dp"
            android:tint="@android:color/holo_orange_light"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/iv_gas"
            android:tag="Gas Station"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/ic_local_gas_station_black_24dp"
            android:tint="@android:color/holo_purple"
            android:layout_weight="1"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        >
        <TextView
            android:id="@+id/flight"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Flight"
            android:textColor="@android:color/holo_purple"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/android"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Android"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Camera"
            android:textColor="@android:color/holo_blue_light"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/gas"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Gas Station"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Phone"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/battery"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="Battery"
            android:textColor="@android:color/holo_orange_light"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17sp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:foregroundGravity="center"
        app:cardCornerRadius="10dp">
        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:textStyle="bold"
            android:paddingRight="20dp"
            android:background="@android:color/holo_blue_light"
            android:text="SUBMIT" />
    </androidx.cardview.widget.CardView>


</LinearLayout>